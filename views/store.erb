<h1><%=@store.name()%></h1>

<% if @store.brands.any?()%>
  <ul>
  <% @store.brands.each do |brand| %>
    <li><%=brand.name()%></li>
  <% end %>
  </ul>
<%else%>
<h2>This store does not have any brands yet</h2>
<% end %>

<h3>Add a Brand</h3>

<form class="" action="/stores/<%=@store.id%>/brand/new" method="post">
  <label for="brand_name">Enter Brand Name:</label>
  <input type="text" name="brand_name" value="">
  <button type="submit" name="button">Add Brand</button>
</form>

<h3>Update <%= @store.name %> </h3>
<form action="/stores/<%= @store.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="new_store_name">New Name:</label>
  <input id="new_store_name" name="new_store_name" type="text">
  <button type="submit">Update Store</button>
</form>

<h3>Delete <%= @store.name %></h3>
<form action="/stores/<%= @store.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Store</button>
</form>

<a href="/">Home</a>
