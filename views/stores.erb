<h1>Here are all your stores:</h1>

<% if @stores.any?()%>
  <ul>
  <% @stores.each do |store| %>
    <li><a href="/stores/<%= store.id()%>"><%=store.name()%></a></li>
  <% end %>
  </ul>
<%else%>
<h2>You do not have any stores yet</h2>
<% end %>

<h3>Add a Store</h3>
<form class="" action="/stores" method="post">
  <label for="store_name">Enter Store Name:</label>
  <input type="text" name="store_name" value="">
  <button type="submit" name="button">Add Store</button>
</form>

<a href="/">Home</a>
