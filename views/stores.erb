<h1>Here are all your stores:</h1>

<% if @stores.any?()%>
  <ul>
  <% @stores.each do |store| %>
    <li><a href="/stores/<%= store.id()%>"><%=store.name()%></a></li>
  <% end %>
  </ul>
<%else%>
<h2>You do not have any stores yet</h2>
<% end %>

<div class="well">
<h3>Add a Store</h3>
  <form class="form-group" action="/stores" method="post">
    <label for="store_name">Enter Store Name:</label>
    <input class="form-control" type="text" name="store_name" value="">
    <button class="btn btn-success" type="submit" name="button">Add Store</button>
  </form>
</div>

<a href="/">Home</a>
